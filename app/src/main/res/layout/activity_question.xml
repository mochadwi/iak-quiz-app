<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="id.co.iak.quizapp.question.Question01Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/ll_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_small_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_score_caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/str_score"/>

            <!-- TODO: timer? -->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:text=""-->
            <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/txt_indicator_question_caption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/str_indicator_question"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_caption"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_score_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txt_indicator_question_val"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1/5"
                android:textSize="24sp"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll_value">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="@string/question_txt"/>

                <RadioGroup
                    android:id="@+id/rg_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"/>

                    <RadioButton
                        android:id="@+id/rb_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"/>

                    <RadioButton
                        android:id="@+id/rb_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"/>

                    <RadioButton
                        android:id="@+id/rb_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"/>
                </RadioGroup>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/question_btn_next"/>
</RelativeLayout>
