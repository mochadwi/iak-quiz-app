<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- TODO: styling the text inside brackets -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results for (You Think You Know Final Fantasy?)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's see how you did..." />

    <!-- TODO: give a loader animation -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You scored: 5 / 10"
        android:textSize="@dimen/font_size_normal" />

    <TextView
        android:id="@+id/txt_score_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You scored 75 points." />

    <TextView
        android:id="@+id/txt_name_val"
        android:layout_width="wrap_content"
        android:text="Congratulations, name"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>